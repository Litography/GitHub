<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <ImageView
        android:id="@+id/imageViewUserPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/user_photo"
        android:src="@drawable/microsoft_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Microsoft"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@id/imageViewUserPhoto"
        app:layout_constraintTop_toTopOf="@id/imageViewUserPhoto" />

    <TextView
        android:id="@+id/textViewRepositoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repository: Windows Vista"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/textViewUserName"
        app:layout_constraintTop_toBottomOf="@id/textViewUserName" />

    <TextView
        android:id="@+id/textViewRepositoryStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Stars: 54,3k"
        app:layout_constraintStart_toStartOf="@id/textViewRepositoryName"
        app:layout_constraintTop_toBottomOf="@id/textViewRepositoryName" />

    <TextView
        android:id="@+id/textViewRepositoryForks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:text="Forks: 154,3k"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@id/textViewRepositoryStars"
        app:layout_constraintTop_toTopOf="@id/textViewRepositoryStars" />

    <View
        android:id="@+id/viewFooterLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/textViewUserName" />

</androidx.constraintlayout.widget.ConstraintLayout>